#!/system/bin/sh
export PATH=/sbin:/system/sbin:/system/bin:/system/xbin

#### handle kernels with built-in thermal engine
needsthermal=
[ ! -d /sys/module/msm_thermal/core_control ] && [ ! -d /sys/kernel/msm_thermal ] && needsthermal=1

# Always, all the time
[ ! $needsthermal ] && stop thermal-engine && echo 1 > /sys/module/msm_thermal/parameters/enabled
